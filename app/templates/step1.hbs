<div class="row">
  <div class="col-5">
    <label for="s1">Produits disponibles</label>
    <MultiSelect id="s1" @elements={{model.dispoItems}} @selectedIds={{model.selectedDispoItemsIds}}/>
    {{pluralize model.includedItems.length "" "élément sélectionné" "éléments sélectionnés"}}
  </div>
  <div class="col">
    <button disabled={{if (lte model.selectedDispoItems.length 0) "disabled" ""}} class="btn btn-info btn-block" {{action "addTo" model.dispoItems model.selectedDispoItems model.includedItems}}>+</button>
    <button disabled={{if (lte model.dispoItems.length 0) "disabled" ""}} class="btn btn-info btn-block" {{action "addTo" model.dispoItems model.dispoItems model.includedItems}}> ++</button>
    <button disabled={{if (lte model.selectedIncludedItems.length 0) "disabled" ""}} class="btn btn-info btn-block" {{action "addTo" model.includedItems model.selectedIncludedItems model.dispoItems}}> -</button>
    <button disabled={{if (lte model.includedItems.length 0) "disabled" ""}} class="btn btn-info btn-block" {{action "addTo" model.includedItems model.includedItems model.dispoItems}}> --</button>
  </div>
  <div class="col-5">
    <label for="s2">Produits inclus</label>
    <MultiSelect id="s2" @elements={{model.includedItems}} @selectedIds={{model.selectedIncludedItemsIds}}/>
  </div>
</div>